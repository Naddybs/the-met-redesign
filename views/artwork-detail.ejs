<%- include('./partials/head') %>



<!-- ARTWORK DETAIL SECTION -->
<section class="artwork-detail-section">
    <figure class="artwork-detail">
        <div class="image-container">
            <img id="artwork-img" src="<%= object.primaryImage %>" alt="<%= object.title %> by <%= object.artistDisplayName %>">
        </div>
        <h2 id="artwork-title"><%= object.title %></h2>
    </figure>
    <section class="artwork-detail-section">
        <figcaption class="artwork-info">
            <ul class="artwork-details-list">
                <li>
                    <details>
                        <summary><strong>Artist:</strong></summary>
                        <p><%= object.artistDisplayName %></p>
                    </details>
                </li>
                <li>
                    <details>
                        <summary><strong>Biography:</strong></summary>
                        <p><%= object.artistDisplayBio %></p>
                    </details>
                </li>
                <li>
                    <details>
                        <summary><strong>Date:</strong></summary>
                        <p><%= object.objectDate %></p>
                    </details>
                </li>
                <li>
                    <details>
                        <summary><strong>Medium:</strong></summary>
                        <p><%= object.medium %></p>
                    </details>
                </li>
                <li>
                    <details>
                        <summary><strong>Dimensions:</strong></summary>
                        <p><%= object.dimensions %></p>
                    </details>
                </li>
            </ul>
        </figcaption>
    </section>
    

<!-- EMAIL FORM SECTION -->
<section class="email-form-section">
    <h2>Share this Artwork</h2>
    <form id="email-form" action="https://api.web3forms.com/submit" method="POST">
        <input type="hidden" name="access_key" value="4f79e79f-5c3d-45c0-af69-82f9ce7cb793">
        <input type="hidden" name="subject" value="Check out this artwork!">
        <input type="hidden" name="artwork_title" value="<%= object.title %>">
        <input type="hidden" name="artwork_url" value="https://the-met-redesign.onrender.com/artwork/<%= object.objectID %>">
        <input type="hidden" name="artwork_image" value="<%= object.primaryImage %>">

        <label for="email">Your Email:</label>
        <input type="email" id="email" name="email" required>

        <label for="friend-email">Friend's Email:</label>
        <input type="email" id="friend-email" name="friend-email" required>

        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="4" placeholder="Write a personal message..."></textarea>

        <button type="submit">Send</button>
    </form>
    <p id="form-feedback" aria-live="polite"></p>
</section>

</body>
</html>
